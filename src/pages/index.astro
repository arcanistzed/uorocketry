---
import Layout from "../layouts/Layout.astro";

const title = "Home";
const path = "/";
---

<Layout title={title} path={path} theme={"light"}>
		<main class="h-full flex items-center w-min mx-auto flex-col justify-center gap-4">
			<h1
				class="bg-gradient-to-r from-blue-800 to-red-800 bg-clip-text text-6xl font-bold text-transparent sm:text-8xl"
			>
				uORocketry
			</h1>
			<h2 class="text-center text-2xl font-bold text-indigo-800 sm:text-3xl">uOttawa's fastest team</h2>
			<p class="text-center text-2xl">uOttawa's student engineering team that designs, manufactures, and launches high-powered sounding rockets!</p>
		</main>
</Layout>
